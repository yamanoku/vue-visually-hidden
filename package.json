{
  "name": "vue-visually-hidden",
  "description": "Vue.js visually hidden component",
  "version": "2.0.0-alpha.1",
  "keywords": [
    "vue",
    "vue.js",
    "vue3",
    "component",
    "accessible",
    "accessibility",
    "a11y",
    "visually hidden",
    "visually hidden component",
    "sr-only",
    "screenreader"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "demo:dev": "cd demo && vite",
    "demo:build": "cd demo && vite build",
    "test": "vitest run"
  },
  "types": "src/index.ts",
  "module": "./dist/vue-visually-hidden.es.js",
  "main": "./dist/vue-visually-hidden.umd.js",
  "files": [
    "dist",
    "src/index.ts",
    "src/components/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/vue-visually-hidden.es.js",
      "require": "./dist/vue-visually-hidden.umd.js"
    },
    "./style": "./dist/style.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yamanoku/vue-visually-hidden.git"
  },
  "author": "yamanoku",
  "bugs": {
    "url": "https://github.com/yamanoku/vue-visually-hidden/issues"
  },
  "homepage": "https://github.com/yamanoku/vue-visually-hidden#readme",
  "peerDependencies": {
    "vue": "^2.0.0 || >=3.0.0",
    "@vue/compiler-sfc": "3.5.16",
    "@vue/composition-api": "^1.0.0-rc.1"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "vue-demi": "0.14.10"
  },
  "devDependencies": {
    "@babel/core": "7.27.3",
    "@babel/preset-env": "7.27.2",
    "@types/jest": "29.5.14",
    "@types/jest-axe": "3.5.9",
    "@vitejs/plugin-vue": "5.2.4",
    "@vue/compiler-sfc": "3.5.16",
    "@vue/test-utils": "2.4.6",
    "jest-axe": "10.0.0",
    "jsdom": "26.1.0",
    "tslib": "2.8.1",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vitest": "3.1.4",
    "vue": "3.5.16",
    "vue-tsc": "2.2.10"
  },
  "license": "MIT"
}
