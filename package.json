{
  "name": "vue-visually-hidden",
  "description": "Vue.js visually hidden component",
  "version": "2.0.0-alpha.1",
  "keywords": [
    "vue",
    "vue.js",
    "vue3",
    "component",
    "accessible",
    "accessibility",
    "a11y",
    "visually hidden",
    "visually hidden component",
    "sr-only",
    "screenreader"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "demo:dev": "cd demo && vite",
    "demo:build": "cd demo && vite build",
    "test": "vitest run"
  },
  "types": "src/index.ts",
  "module": "./dist/vue-visually-hidden.es.js",
  "main": "./dist/vue-visually-hidden.umd.js",
  "files": [
    "dist",
    "src/index.ts",
    "src/components/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/vue-visually-hidden.es.js",
      "require": "./dist/vue-visually-hidden.umd.js"
    },
    "./style": "./dist/style.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yamanoku/vue-visually-hidden.git"
  },
  "author": "yamanoku",
  "bugs": {
    "url": "https://github.com/yamanoku/vue-visually-hidden/issues"
  },
  "homepage": "https://github.com/yamanoku/vue-visually-hidden#readme",
  "peerDependencies": {
    "vue": "^2.0.0 || >=3.0.0",
    "@vue/compiler-sfc": "3.2.40",
    "@vue/composition-api": "^1.0.0-rc.1"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "vue-demi": "0.13.11"
  },
  "devDependencies": {
    "@babel/core": "7.19.3",
    "@babel/preset-env": "7.19.4",
    "@types/jest": "29.1.2",
    "@types/jest-axe": "3.5.5",
    "@vitejs/plugin-vue": "3.1.2",
    "@vue/compiler-sfc": "3.2.40",
    "@vue/test-utils": "2.1.0",
    "jest-axe": "6.0.0",
    "jsdom": "20.0.1",
    "tslib": "2.4.0",
    "typescript": "4.8.4",
    "vite": "3.1.7",
    "vitest": "0.24.0",
    "vue": "3.2.40",
    "vue-tsc": "1.0.3"
  },
  "license": "MIT"
}
